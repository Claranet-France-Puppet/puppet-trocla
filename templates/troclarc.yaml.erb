---
options:
    random: <%= @random_passwords %>
    length: <%= @password_length %> 
adapter: :<%= @adapter %>
<% unless @adapter_options.empty? %>
adapter_options:
<% @adapter_options.each do |key,value| -%>
    :<%= key %>: '<%= value %>'
<% end -%>
<% end -%>
<% if @encryption %>
encryption: :<%= @encryption %>
<% end -%>
<% unless @ssl_options.empty? %>
ssl_options:
<% @ssl_options.each do |key,value| -%>
    :<%= key %>: '<%= value %>'
<% end -%>
<% end -%>
